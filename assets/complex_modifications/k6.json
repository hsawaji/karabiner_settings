{
  "title": "shift+ESCでチルダ",
  "rules": [
    {
      "description": "shift+ESCでチルダ",
      "manipulators": [
        {
          "from": { "key_code": "escape", "modifiers": { "mandatory": [ "right_command" ], "optional": [ "any" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "escape", "modifiers": { "mandatory": [ "left_command" ], "optional": [ "any" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "left_command" ] } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "escape", "modifiers": { "mandatory": [ "right_shift" ], "optional": [ "any" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "right_shift" ] } ],
          "type": "basic"
        }
      ]
    }
  ]
}
